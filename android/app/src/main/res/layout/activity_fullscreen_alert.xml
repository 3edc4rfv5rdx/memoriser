<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB8500">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Top section - 1/8 of screen (Memorizer + Time at 7/8 from bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- App name "Memorizer" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memorizer"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Current time -->
            <TextView
                android:id="@+id/alert_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Middle section - 6/8 of screen (Message content) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            android:paddingTop="40dp">

            <!-- Reminder title -->
            <TextView
                android:id="@+id/alert_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reminder: Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"/>

            <!-- Content -->
            <TextView
                android:id="@+id/alert_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>

        <!-- Bottom section - 1/8 of screen (OK button) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- OK Button with rounded corners -->
            <Button
                android:id="@+id/alert_ok_button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="OK"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Semi-transparent barrier overlay that blocks all clicks -->
    <FrameLayout
        android:id="@+id/barrier_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Draggable circle barrier (1/4 screen diameter) -->
    <FrameLayout
        android:id="@+id/draggable_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:background="@drawable/draggable_circle"
        android:clickable="false"
        android:focusable="false">

        <!-- Lock icon and arrow inside circle -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Lock icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’"
                android:textSize="60sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Down arrow (wide) -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_arrow_down_wide"
                android:contentDescription="Drag down"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
