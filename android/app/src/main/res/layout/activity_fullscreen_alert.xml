<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB8500">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Top section - 4/5 of screen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center">

            <!-- App name "Memorizer" at top -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memorizer"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Current time -->
            <TextView
                android:id="@+id/alert_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="32dp"/>

            <!-- Reminder title -->
            <TextView
                android:id="@+id/alert_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reminder: Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"/>

            <!-- Content -->
            <TextView
                android:id="@+id/alert_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>

        <!-- Bottom section - 1/5 of screen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- OK Button with rounded corners -->
            <Button
                android:id="@+id/alert_ok_button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="OK"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Transparent barrier overlay (swipe down to dismiss) -->
    <FrameLayout
        android:id="@+id/barrier_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:clickable="true">

        <!-- Lock icon and arrow centered -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Lock icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’"
                android:textSize="80sp"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Down arrow -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¬‡"
                android:textSize="60sp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
